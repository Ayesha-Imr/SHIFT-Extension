{
    "manifest_version": 3,
    "name": "Product Analyzer",
    "version": "1.0",
    "description": "Extracts URL and sends it to a backend for analysis.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
 }
 